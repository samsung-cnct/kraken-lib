{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://judkins.house/apis/k2/v1/nodePool.json",
  "$$target": "nodePool.json",
  "title": "nodePool Configuration",
  "description": "Describes a set of one or more nodes which share the same configuration.",

  "properties": {
    "name": {
      "description": "Name of the nodePool.",
      "type": "string"
    },
    "count": {
      "description": "Number of nodes in the nodePool.",
      "minimum": 1,
      "type": "number"
    },
    "kvStoreConfig": { "$ref": "kvStoreConfig.json" },
    "apiServerConfig": { "$ref": "apiServerConfig.json" },
    "kubeConfig": { "$ref": "kubeConfig.json" },
    "bastionConfig": { "$ref": "bastionConfig.json" },
    "containerConfig": { "$ref": "containerConfig.json" },
    "osConfig": { "$ref": "osConfig.json" },
    "nodeConfig": { "$ref": "nodeConfig.json" },
    "keyPair": { "$ref": "keyPair.json" },
    "schedulingConfig": {"$ref": "schedulingConfig.json"}
  },
  "required": [
    "name",
    "count",
    "nodeConfig"
  ],
  "type": "object"
}
